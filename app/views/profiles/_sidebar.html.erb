<h5 class="bg-secondary-subtle mt-3 p-2"><%= @user.username.upcase %></h5>
<%= link_to "Loans", user_loans_path(@user.username) %>

<h5 class="mt-3 p-2" style="background: hsla(0,0%,78%,.23);">READING LOG</h5>
<div class="reading-log">
    <div class="mb-2">
        <%= link_to user_readings_path do %>
            Currently Reading

            <%= @user.readings.count %>
        <% end %>
    </div>

    <div class="mb-2">
        <%= link_to user_want_to_read_path do %>
            Want to Read

            <%= @user.potential_reads.count %>
        <% end %>
    </div>

    <div class="mb-2">
        <%= link_to user_already_read_path do %>
            Already Read

            <%= @user.reads.count %>
        <% end %>
    </div>

</div>